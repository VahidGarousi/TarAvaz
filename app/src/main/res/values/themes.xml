<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TarAvaz" parent="android:Theme.Material.Light.NoActionBar" />



    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#00022E</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">35000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.TarAvaz</item>
    </style>
</resources>